<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="550dp">

    <TextView
        android:id="@+id/flavorPcs_edit_wingsprod"
        android:layout_width="204dp"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/txtPick"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescription_edit_wingsprod" />

    <CheckBox
        android:id="@+id/cbSoyGarlic_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Soy Garlic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbBuffalo_edit_wingsprod" />

    <CheckBox
        android:id="@+id/cbSesameHoneyGlazed_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Sesame Honey Glazed"
        app:layout_constraintStart_toEndOf="@+id/cbSoyGarlic_edit_wingsprod"
        app:layout_constraintTop_toBottomOf="@+id/cbBulgogi_edit_wingsprod" />

    <CheckBox
        android:id="@+id/cbBuffalo_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Buffalo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbGarlicParmesan_edit_wingsprod" />

    <CheckBox
        android:id="@+id/cbBulgogi_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Bulgogi"
        app:layout_constraintStart_toEndOf="@+id/cbBuffalo_edit_wingsprod"
        app:layout_constraintTop_toBottomOf="@+id/cbSaltedEgg_edit_wingsprod" />

    <CheckBox
        android:id="@+id/cbGarlicParmesan_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Garlic Parmesan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/cbSaltedEgg_edit_wingsprod"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Salted Egg"
        app:layout_constraintStart_toEndOf="@+id/cbGarlicParmesan_edit_wingsprod"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtItemTitle_edit_wingsprod"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Item Name"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imgViewItemMenu_edit_wingsprod"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtItemDescription_edit_wingsprod"
        android:layout_width="231dp"
        android:layout_height="66dp"
        android:layout_marginTop="5dp"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/imgViewItemMenu_edit_wingsprod"
        app:layout_constraintTop_toBottomOf="@+id/txtItemTitle_edit_wingsprod" />

    <ImageView
        android:id="@+id/imgViewItemMenu_edit_wingsprod"
        android:layout_width="111dp"
        android:layout_height="99dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menubyteslogo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Choose Flavors"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescription_edit_wingsprod" />

    <TextView
        android:id="@+id/txtPick"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="Pick "
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescription_edit_wingsprod" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Select Quantity"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSoyGarlic_edit_wingsprod" />

    <Button
        android:id="@+id/minusQtyButton_edit_wingsprod"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="40dp"
        android:enabled="false"
        android:text="-"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSoyGarlic_edit_wingsprod" />

    <TextView
        android:id="@+id/qtyText_edit_wingsprod"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:text="1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/addQtyButton_edit_wingsprod"
        app:layout_constraintStart_toEndOf="@+id/minusQtyButton_edit_wingsprod"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/addQtyButton_edit_wingsprod"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="130dp"
        android:text="+"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSoyGarlic_edit_wingsprod" />

    <TextView
        android:id="@+id/mealTotalText_edit_wingsprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="0.00"
        android:textColor="#FFC61D25"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSoyGarlic_edit_wingsprod" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_update_item_wingsprod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="Update Item"
        android:textAllCaps="false"
        android:textColor="#C61D25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_cancel_changes_edit_wingsprod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="Cancel Changes"
        android:textAllCaps="false"
        android:textColor="#f44747"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>