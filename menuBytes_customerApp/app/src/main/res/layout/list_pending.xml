<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtOrderQty"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="IN THE KITCHEN" />

    <TextView
        android:id="@+id/txtOrderNum"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txtOrderQty"
        android:text="Order Number" />

    <TextView
        android:id="@+id/txtOrderPrice"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txtOrderNum"
        android:gravity="right"
        android:maxLength="20"
        android:singleLine="True"
        android:text="0000.00" />

    <TextView
        android:id="@+id/txtOrderAddOns"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrderPrice"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtOrderQty"
        android:maxLength="100"
        android:text="Description" />
</RelativeLayout>