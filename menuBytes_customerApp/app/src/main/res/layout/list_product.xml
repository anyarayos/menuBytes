<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageShawarma"
        android:src="@color/purple_500"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/txtNameShawarma"
        android:layout_toRightOf="@id/imageShawarma"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Shawarma Name"/>

    <TextView
        android:id="@+id/txtPriceShawarma"
        android:layout_toRightOf="@id/imageShawarma"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameShawarma"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:maxLength="50"
        android:singleLine="True"
        android:text="00.00"/>

    <TextView
        android:id="@+id/txtDesShawarma"
        android:layout_toRightOf="@id/imageShawarma"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPriceShawarma"
        android:maxLength="50"
        android:singleLine="True"
        android:text="Description"/>
</RelativeLayout>