<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Menu_Product_Fragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Select Quantity"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_allmeat" />

    <TextView
        android:id="@+id/txtShawarmaAllMeatPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="10.00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_allmeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox_allmeat"
        app:layout_constraintTop_toTopOf="@+id/checkBox_allmeat" />

    <TextView
        android:id="@+id/mealTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="0.00"
        android:textColor="#FFC61D25"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdateOrder"
        app:layout_constraintStart_toEndOf="@+id/addQtyButton"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_allmeat" />

    <CheckBox
        android:id="@+id/checkBox_allmeat"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Shawarma All Meat"
        app:layout_constraintStart_toStartOf="@+id/txtChoose"
        app:layout_constraintTop_toBottomOf="@+id/txtChoose" />

    <TextView
        android:id="@+id/txtOption"
        android:layout_width="204dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="Optional"
        app:layout_constraintStart_toEndOf="@+id/txtChoose"
        app:layout_constraintTop_toBottomOf="@+id/typeRadioGroup" />

    <TextView
        android:id="@+id/txtChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Customize your meal"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeRadioGroup" />

    <TextView
        android:id="@+id/qtyText"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:text="1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/addQtyButton"
        app:layout_constraintStart_toEndOf="@+id/minusQtyButton"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/txtItemTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:text="Item Name"
        app:layout_constraintStart_toEndOf="@+id/imgViewItemMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtItemDescription"
        android:layout_width="231dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Descriptiom"
        app:layout_constraintStart_toEndOf="@+id/imgViewItemMenu"
        app:layout_constraintTop_toBottomOf="@+id/txtItemTitle" />

    <ImageView
        android:id="@+id/imgViewItemMenu"
        android:layout_width="111dp"
        android:layout_height="99dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/menubyteslogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Choose Type"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescription" />

    <TextView
        android:id="@+id/soloPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:text="00.00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPick" />

    <TextView
        android:id="@+id/b1t1Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:text="00.00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soloPrice" />

    <TextView
        android:id="@+id/txtPick"
        android:layout_width="204dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="Pick 1"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtItemDescription" />

    <RadioGroup
        android:id="@+id/typeRadioGroup"
        android:layout_width="235dp"
        android:layout_height="102dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/soloRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Solo" />

        <RadioButton
            android:id="@+id/b1t1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy 1 Take 1" />
    </RadioGroup>

    <Button
        android:id="@+id/btnUpdateOrder"
        android:layout_width="117dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:text="Add to Cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_allmeat" />

    <Button
        android:id="@+id/minusQtyButton"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="-"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_allmeat" />

    <Button
        android:id="@+id/addQtyButton"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="+"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/minusQtyButton"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_allmeat" />

</androidx.constraintlayout.widget.ConstraintLayout>