<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtPendOrderQty"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtPendOrderName"
        android:gravity="center"
        android:text="00"
        android:textColor="#000000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/txtPendOrderName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Order Name"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPendOrderSubPrice"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtPendOrderPrice"
        android:gravity="right"
        android:maxLength="20"
        android:singleLine="True"
        android:text="00000.00"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtPendOrderPrice"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtPendOrderQty"
        android:gravity="right"
        android:maxLength="20"
        android:singleLine="True"
        android:text="000.00"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtOrderAddOns"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPendOrderName"
        android:layout_marginLeft="20dp"
        android:maxLength="100"
        android:text="Description"
        android:textSize="12dp" />
</RelativeLayout>