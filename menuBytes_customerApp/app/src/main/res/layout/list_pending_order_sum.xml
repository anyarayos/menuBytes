<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:id="@+id/txtPendOrderQty"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="0"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtPendOrderName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="3dp"
        android:text="Order Name"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPendOrderPrice"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/txtPendOrderName"
        android:textColor="#000000"
        android:gravity="right"
        android:maxLength="20"
        android:singleLine="True"
        android:text="0000.00"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtOrderAddOns"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPendOrderPrice"
        android:layout_marginLeft="75dp"
        android:maxLength="100"
        android:text="Description"
        android:textSize="12dp" />
</RelativeLayout>